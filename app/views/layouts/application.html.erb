  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <meta name="title" content="Shotify" />
  <meta name="keywords" content="<%= content_for?(:keywords) ? yield(:keywords) : "surveys, psychology, statistics, academic, research, socialsci" %>" />
  <%= csrf_meta_tags %>
